<table>
	<% if @books.nil? %>
		<tr><td>Enter the keyword to search</td></tr>
	<% elsif @books.empty? %>
		<tr><td>No results found - sorry! </td></tr>
	<%else%>
		<% @books.each do |book| %>
      <%= render :partial => 'books/books_outline', :locals => {:book => book} %>
    <% end %>
	<%end%>
</table>