<div class = "signup">
  <% form_for(:user, :url => users_path) do |f| %>

  <%= f.error_messages %>

  <div class="field">
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <% end %>
</div>
